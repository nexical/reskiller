{
  "name": "@nexical/reskill",
  "version": "0.0.0",
  "description": "Adaptive Skill Learning System for the Nexus Ecosystem",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "reskill": "dist/index.js",
    "prompt": "dist/cli/prompt.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky",
    "prepublishOnly": "npm run build && cp -r prompts dist/prompts",
    "test": "vitest run --config vitest.unit.config.ts",
    "test:unit": "vitest run --config vitest.unit.config.ts",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:watch": "vitest --config vitest.unit.config.ts"
  },
  "lint-staged": {
    "**/*": [
      "prettier --write --ignore-unknown"
    ],
    "**/*.{js,jsx,ts,tsx,astro}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "chokidar": "^3.6.0",
    "commander": "^11.0.0",
    "glob": "^10.3.10",
    "inquirer": "^9.3.8",
    "minimist": "^1.2.8",
    "nunjucks": "^3.2.4",
    "ora": "^8.0.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/inquirer": "^9.0.9",
    "@types/minimist": "^1.2.5",
    "@types/node": "^20.0.0",
    "@types/nunjucks": "^3.2.6",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^17.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  },
  "types": "dist/index.d.ts"
}
